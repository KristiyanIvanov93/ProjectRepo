<section id="create-container">
    <div class="create-container-info">
        <h1>Create Volcano Wiki</h1>
        <form method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="..." {{#if data.name}}value="{{data.name}}" {{/if}}>
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." {{#if
                data.location}}value="{{data.location}}" {{/if}}>
            <label>Elevation:</label>
            <input type="number" id="elevation" name="elevation" placeholder="..." {{#if
                data.elevation}}value="{{data.elevation}}" {{/if}}>
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastErruption" placeholder="..." {{#if
                data.lastErruption}}value="{{data.lastErruption}}" {{/if}}>
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." {{#if data.image}}value="{{data.image}}"
                {{/if}}>
            <label>Volcano Type:</label>
            <select autocomplete="off" id="type" name="typeVolcano" {{#if data.typeVolcano}}
                value="{{data.typeVolcano}}" selected="{{data.TypeVolcano}}" {{/if}}>
                {{#if data.typeVolcano}}
                <option value="{{data.typeVolcano}}" hidden="hidden" selected>{{data.typeVolcano}}</option>
                {{else}}
                <option value="---" hidden="hidden">---</option>
                {{/if}}
                <option value="Supervolcanoes">Supervolcanoes</option>
                <option value="Submarine">Submarine</option>
                <option value="Subglacial">Subglacial</option>
                <option value="Mud" selected>Mud</option>
                <option value="Stratovolcanoes">Stratovolcanoes</option>
                <option value="Shield">Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description"
                placeholder="...">{{#if errors}}{{data.description}}{{/if}}</textarea>
            <input type="submit" id="btn" value="Submit">
        </form>
    </div>
</section>